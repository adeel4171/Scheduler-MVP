<%= form_for [:scheduler, @schedule] do |form| %>
	<% h = 'days['+ @date + ']' %>
	<div class="row">
		<div class="col-md-2">
			<%= form.label "Start Time" %>
		</div>
		<div class="col-md-4 form-group">
			<%= form.text_field :days, name: h+'[start_time]', value: '', class: 'timepicker form-control' %>
		</div>

		<div class="col-md-2">
			<%= form.label "End Time" %>
		</div>
		<div class="col-md-4 form-group">
			<%= form.text_field :days, name: h+'[end_time]', value: '', class: 'timepicker form-control' %>
		</div>
	</div>

	<div class="row">
		<%= form.hidden_field :days, name: h+'[changerequest]', value: 'true' %>
		<%= form.hidden_field :user_id, value: user_id %>
		<div class="col-md-4 col-md-offset-2">
			<div class="actions">
				<%= form.submit %>
			</div>
		</div>
	</div>

<% end %>