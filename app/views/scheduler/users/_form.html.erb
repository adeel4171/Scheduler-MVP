    </div>
    <div class="col-md-4 form-group">
      <%= form.text_field :gender, class: 'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <%= form.label :email %>
    </div>
    <div class="col-md-4 form-group">
      <%= form.text_field :email, class: 'form-control' %>
    </div>
    <div class="col-md-4">
      <div class="actions">
        <%= form.submit %>
      </div>
    </div>
  </div>
